{
  "version": 6,
  "cmakeMinimumRequired": { "major": 3, "minor": 23 },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/bin",
        "BUILD_TESTING": "ON"
      }
    },

    {
      "name": "dev-debug",
      "inherits": "base",
      "displayName": "Developer Debug",
      "description": "Local debug build with developer utilities and testing",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VELM_BUILD_DEV": "ON",
        "ENABLE_SANITIZER": "OFF",
        "ENABLE_COVERAGE": "OFF"
      }
    },
    {
      "name": "dev-release",
      "inherits": "base",
      "displayName": "Developer Release",
      "description": "Optimized local release build with developer utilities and testing",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VELM_BUILD_DEV": "ON",
        "ENABLE_SANITIZER": "OFF",
        "ENABLE_COVERAGE": "OFF"
      }
    },

    {
      "name": "ci-release",
      "inherits": "base",
      "displayName": "CI Release",
      "description": "Continuous Integration release build with tests",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VELM_BUILD_DEV": "OFF",
        "ENABLE_SANITIZER": "OFF",
        "ENABLE_COVERAGE": "OFF",
        "CMAKE_CXX_FLAGS_RELEASE": "-O3 -DNDEBUG -Wall -Wextra -Werror"
      }
    },
    {
      "name": "ci-sanitize",
      "inherits": "base",
      "displayName": "CI Sanitizer",
      "description": "AddressSanitizer and UndefinedBehaviorSanitizer enabled build for CI",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VELM_BUILD_DEV": "OFF",
        "ENABLE_SANITIZER": "ON",
        "ENABLE_COVERAGE": "OFF",
        "CMAKE_C_FLAGS_DEBUG": "-fsanitize=address,undefined -fno-omit-frame-pointer",
        "CMAKE_CXX_FLAGS_DEBUG": "-fsanitize=address,undefined -fno-omit-frame-pointer",
        "CMAKE_EXE_LINKER_FLAGS_DEBUG": "-fsanitize=address,undefined"
      }
    },
    {
      "name": "ci-coverage",
      "inherits": "base",
      "displayName": "CI Coverage",
      "description": "Instrumented build for coverage reporting in CI",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VELM_BUILD_DEV": "OFF",
        "ENABLE_SANITIZER": "OFF",
        "ENABLE_COVERAGE": "ON",
        "CMAKE_C_FLAGS_DEBUG": "--coverage",
        "CMAKE_CXX_FLAGS_DEBUG": "--coverage",
        "CMAKE_EXE_LINKER_FLAGS_DEBUG": "--coverage"
      }
    },

    {
      "name": "dist-release",
      "inherits": "base",
      "displayName": "Distribution Release",
      "description": "Minimal release build for packaging and installation (no tests, no dev tools)",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VELM_BUILD_DEV": "OFF",
        "BUILD_TESTING": "OFF",
        "ENABLE_SANITIZER": "OFF",
        "ENABLE_COVERAGE": "OFF"
      }
    }
  ],

  "buildPresets": [
    { "name": "dev-debug-build", "configurePreset": "dev-debug" },
    { "name": "dev-release-build", "configurePreset": "dev-release" },
    { "name": "ci-release-build", "configurePreset": "ci-release" },
    { "name": "ci-sanitize-build", "configurePreset": "ci-sanitize" },
    { "name": "ci-coverage-build", "configurePreset": "ci-coverage" },
    { "name": "dist-release-build", "configurePreset": "dist-release" }
  ],

  "testPresets": [
    {
      "name": "dev-debug-test",
      "configurePreset": "dev-debug",
      "output": { "outputOnFailure": true },
      "execution": { "jobs": 4, "stopOnFailure": true }
    },
    {
      "name": "dev-release-test",
      "configurePreset": "dev-release",
      "output": { "outputOnFailure": true },
      "execution": { "jobs": 4, "stopOnFailure": true }
    },
    {
      "name": "ci-release-test",
      "configurePreset": "ci-release",
      "output": { "outputOnFailure": true },
      "execution": { "jobs": 4, "stopOnFailure": true }
    },
    {
      "name": "ci-sanitize-test",
      "configurePreset": "ci-sanitize",
      "output": { "outputOnFailure": true },
      "execution": { "jobs": 2, "stopOnFailure": true }
    },
    {
      "name": "ci-coverage-test",
      "configurePreset": "ci-coverage",
      "output": { "outputOnFailure": true },
      "execution": { "jobs": 2, "stopOnFailure": true }
    }
  ]
}
